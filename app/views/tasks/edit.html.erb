<div class="container">
  <h1>Edit task</h1>
  <%= form_for(@task) do |f| %>
    <div class="form-group">
        <%= f.label :title %> <br>
        <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :details %> <br>
        <%= f.text_field :details, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.check_box :completed %>
        <%= f.label :completed %>
    </div>
    <%= f.submit "Finish!", class: "btn btn-outline-danger" %>
  <% end %>
  <%= link_to("Back to list", '/tasks', class: "btn btn-outline-dark") %>
</div>
